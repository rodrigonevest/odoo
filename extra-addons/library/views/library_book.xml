<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Data records go here-->
    <record id='library_book_action' model='ir.actions.act_window'>
        <field name="name">Livros da Biblioteca</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Minha Biblioteca" id="library_base_menu" />
    <menuitem name="Livros" id="library_book_menu" parent="library_base_menu" action="library_book_action"/>
    
    

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Library Book Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">            
            <form>
                <header>
                    <button name="make_available" string="Disponibilizar" type="object"/>
                    <button name="make_borrowed" string="Emprestado" type="object"/>
                    <button name="make_lost" string="Perdido" type="object"/> 
                    <button name="make_draft" string="IndisponÃ­vel" type="object"/> 
                    <field name="state" widget="statusbar"/> 
                </header>   
                <sheet>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_ids" widget="many2many_tags"/>
                            <!--field name="state"/-->
                            <field name="notes"/>
                            <field name="category_id"/>
                            <field name="isbn"/> 
                            <field name="pages"/> 
                            <field name="publisher_id"/> 
                            <field name="publisher_city"/>  
                            <field name="old_edition" />                       
                        </group>
                        <group>
                            <field name="short_name"/>
                            <field name="date_release"/>
                            <field name="age_days"/>
                            <field name="date_updated"/>
                            <field name="cover" widget="image" class="oe_avatar"/>
                            <field name="reader_rating"/>                        
                        </group>
                        <group>
                            <field name="cost_price"/>
                            <field name= "retail_price"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                        
                    <group>
                        <field name="description"/>
                    </group> 
                    <button name="log_all_library_members" string="Log Members" type="object"/> 
                    <button name="change_release_date" string="Update Date" type="object"/>
                    <button name="book_rent" string="Rent this book" type="object" class="btn-primary"/>
                
                </sheet>              
            </form>
        </field> 
               
    </record>

    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">Library Book List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_release"/>  
                <field name="state"/>              
            </tree>
        </field>
    </record>

    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">Library Book Search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="author_ids"/>
            <filter string="No Authors" name="without_author" domain="[('author_ids','=',False)]"/>
        </search>
        </field>
    </record>
    
</odoo>
